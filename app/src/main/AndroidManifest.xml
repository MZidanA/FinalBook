<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.insfinal.bookdforall.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BooksForAll"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.insfinal.bookdforall.ui.admin.AddBookActivity"
            android:exported="true" />
        <activity
            android:name="com.insfinal.bookdforall.ui.admin.EditBookActivity"
            android:exported="true" />
        <activity
            android:name="com.insfinal.bookdforall.ui.admin.AdminMainActivity"
            android:exported="true"
            android:label="@string/title_activity_main_admin" />
        <activity
            android:name="com.insfinal.bookdforall.ui.user.SetNewPasswordActivity"
            android:exported="true" />
        <activity
            android:name="com.insfinal.bookdforall.ui.user.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name="com.insfinal.bookdforall.ui.user.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.insfinal.bookdforall.ui.user.LoginActivity"
            android:exported="true" />
        <activity android:name="com.insfinal.bookdforall.ui.user.RegisterActivity" />
        <activity android:name="com.insfinal.bookdforall.ui.user.ForgotPasswordActivity" />
        <activity android:name="com.insfinal.bookdforall.ui.user.MainActivity" />
        <activity android:name="com.insfinal.bookdforall.ui.user.BookDetailActivity" />
        <activity android:name="com.insfinal.bookdforall.ui.user.EditProfileActivity" />
    </application>

</manifest>