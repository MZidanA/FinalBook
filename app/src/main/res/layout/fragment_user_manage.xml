<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/headerUserTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/manajemen_pengguna"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pencarian -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchContainer"
            style="@style/SearchInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:startIconDrawable="@drawable/search"
            app:startIconTint="@color/colorGreyText"
            app:layout_constraintTop_toBottomOf="@id/headerUserTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cari_pengguna"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/colorGreyText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Info jika kosong -->
        <TextView
            android:id="@+id/emptyUserView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/belum_ada_pengguna"
            android:textAlignment="center"
            android:textColor="#718096"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/searchContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Daftar Pengguna -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAdminUsers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/emptyUserView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_admin_user" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>